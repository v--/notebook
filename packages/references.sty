\tl_new:N \l_fullref_name_tl

\NewDocumentCommand \fullref {m}
  {
    \cref {#1}
    \tl_set:Nx \l_fullref_name_tl { \crtrefname {#1} }
    \str_if_empty:NF \l_fullref_name_tl { \ (\tl_use:N \l_fullref_name_tl) }
  }

\NewDocumentCommand \Fullref {m}
  {
    \Cref {#1}
    \tl_set:Nx \l_fullref_name_tl { \crtrefname {#1} }
    \str_if_empty:NF \l_fullref_name_tl { \ (\tl_use:N \l_fullref_name_tl) }
  }

\ExplSyntaxOff
