\box_new:N \l_nb_superimpose_box
\dim_new:N \l_nb_superimpose_half_width
\cs_new_protected:Nn \nb_superimpose:nn
  {
    \hbox_set:Nn \l_nb_superimpose_box {\ensuremath{#1}}
    \dim_set:Nn \l_nb_superimpose_half_width
      {
        \fp_to_dim:n
          {
            \fp_eval:n
              {
                {\dim_to_fp:n {\box_wd:N \l_nb_superimpose_box}} / 2
              }
          }
      }

    \hspace{\l_nb_superimpose_half_width}
    \mathclap{#1}
    \mathclap{#2}
    \hspace{\l_nb_superimpose_half_width}
  }

