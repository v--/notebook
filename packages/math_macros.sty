\NewDocumentCommand \reloset {smm}
{
  \IfBooleanTF {#1}
  {
    \overset
      {
        \mathclap { \scriptscriptstyle #2 }
      }
      {#3}
  }
  {
    \negthinspace
    \overset
      {
        \smash
          {
            \raisebox {-0.05em} { \( \scriptscriptstyle #2 \) }
          }
      }
      {#3}
    \negthinspace
  }
}

% Math mode text with spacing
\NewDocumentCommand \T {sm}
{
  \IfBooleanTF {#1}
    { \thinspace \text{#2} \thinspace }
    { \mathrel { \text{#2} } }
}
