\newcounter{thm}

% These list's main purpose is obtaining "theorem 13 b)" instead of "item 13 b)"
% See https://tex.stackexchange.com/a/156061
\NewDocumentCommand \NewListStructure {mm} {
  \newlist{#1}{enumerate}{2}
  \setlist[#1]{format=\small}
  \setlist[#1, 1]{
    label=(\alph*),
    ref=\expandafter\csname the#2\endcsname~(\alph*)
  }
  \setlist[#1, 2]{
    label=(\alph{#1i} \roman*),
    ref=\expandafter\csname the#2\endcsname~(\alph{#1i} \roman*)
  }

  \crefalias{#1i}{#2}
  \crefalias{#1ii}{#2}
}


\theoremstyle  {plain}

\newtheorem       {proposition} [thm] {Proposition}
\NewListStructure {propenum}    {proposition}

\newtheorem       {corollary}   [thm] {Corollary}
\NewListStructure {corenum}     {corollary}

\newtheorem       {lemma}       [thm] {Lemma}
\NewListStructure {lemenum}     {lemma}

\newtheorem       {theorem}     [thm] {Theorem}
\NewListStructure {thmenum}     {theorem}

\newtheorem       {hypothesis}  [thm] {Hypothesis}
\NewListStructure {hypenum}     {hypothesis}

\theoremstyle  {definition}

\newtheorem       {definition}  [thm] {Definition}
\NewListStructure {defenum}     {definition}

\newtheorem       {example}     [thm] {Example}
\NewListStructure {exenum}      {example}

\newtheorem       {remark}      [thm] {Remark}
\NewListStructure {remenum}     {remark}

\newtheorem       {algorithm}   [thm] {Algorithm}
\NewListStructure {algenum}     {algorithm}
