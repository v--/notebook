% Misc
\NewDocumentCommand   \IndHyp     {} {\scriptscriptstyle{\text{ind. hyp.}}}
\NewDocumentCommand   \URL       {m} {\href{#1}{\texttt{#1}}}

% Parameterized shorthand macros
\NewDocumentCommand   \op        {m} {\operatorname{#1}}
\NewDocumentCommand   \bop       {m} {\operatorname{\symbf{#1}}}
\NewDocumentCommand   \cat       {m} {\bop{#1}}
\NewDocumentCommand   \distr     {m} {\bop{#1}}
\NewDocumentCommand   \T         {m} {\mathop{\text{#1}}} % Math mode text with automatic spacing

% Properly spaced quantifiers
\NewDocumentCommand   \quantifier {mm} {#1 \, #2 \, . \,}
\NewDocumentCommand   \qexists     {m} {\quantifier \exists #1}
\NewDocumentCommand   \qforall     {m} {\quantifier \forall #1}
\NewDocumentCommand   \qabstr      {m} {\quantifier \muplambda #1}

% Negative space
\NewDocumentCommand   \co         {} {\operatorname{co}\!}
\NewDocumentCommand   \ess        {} {\operatorname{ess}\!}

% Delimiters
\DeclarePairedDelimiter  \p          \lparen \rparen
\DeclarePairedDelimiter  \eval       \lBrack \rBrack
\DeclarePairedDelimiter  \abs        \vert   \vert
\DeclarePairedDelimiter  \norm       \Vert   \Vert

\DeclarePairedDelimiterX \braket [1] \langle \rangle {%
  \NewDocumentCommand \given {} {\ \delimsize\vert\allowbreak \ }%
  \, #1 \, %
}

\DeclarePairedDelimiterX \set    [1] \lbrace \rbrace {%
  \NewDocumentCommand \given {} {\ \delimsize\vert\allowbreak \ }%
  \, #1 \, %
}

\NewDocumentCommand      \inner {mm}  {\braket{#1, #2}}

