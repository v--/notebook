\usepackage{xspace} % \xspace

% Missing trigonometry
\DeclareMathOperator  \arccot        {arccot}
\DeclareMathOperator  \arctantwo     {arctan2}

% Misc
\NewDocumentCommand   \IndHyp     {} {\scriptscriptstyle{\text{ind. hyp.}}}
\NewDocumentCommand   \URL       {m} {\href{#1}{\texttt{#1}}}

% Parameterized shorthand macros
\NewDocumentCommand   \Bold      {m} {\operatorname{\symbf{#1}}}
\NewDocumentCommand   \Cat       {m} {\Bold{#1}}
\NewDocumentCommand   \Distr     {m} {\Bold{#1}}
\NewDocumentCommand   \Op        {m} {\operatorname{#1}}
\NewDocumentCommand   \T         {m} {\mathop{\text{#1}}} % Math mode text with automatic spacing

% Properly spaced quantifiers
\NewDocumentCommand   \Quantifier {mm} {#1 \, #2 \, . \,}
\NewDocumentCommand   \Exists     {m} {\Quantifier \exists #1}
\NewDocumentCommand   \ForAll     {m} {\Quantifier \forall #1}
\NewDocumentCommand   \Abstr      {m} {\Quantifier \muplambda #1}

% Negative space
\NewDocumentCommand   \Co         {} {\operatorname{co}\!}
\NewDocumentCommand   \Ess        {} {\operatorname{ess}\!}

% Delimiters
\DeclarePairedDelimiter  \Paren     (            )
\DeclarePairedDelimiter  \DBracket  \lBrack      \rBrack
\DeclarePairedDelimiter  \Abs       \vert        \vert
\DeclarePairedDelimiter  \Norm      \Vert        \Vert
\DeclarePairedDelimiterX \Prod  [2] \langle      \rangle    { \, #1, #2 \, }

\DeclarePairedDelimiterX \Bracket [1] \langle \rangle {%
  \NewDocumentCommand \Given {} {\ \delimsize\vert\allowbreak \ }%
  \, #1 \, %
}

\DeclarePairedDelimiterX \Set [1] \{ \} {%
  \NewDocumentCommand \Given {} {\ \delimsize\vert\allowbreak \ }%
  \, #1 \, %
}

