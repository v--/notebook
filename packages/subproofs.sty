\NewDocumentCommand \SubProof {sm}
  {
    \item
    \IfBooleanTF {#1}
      { \textit{ \textbf{#2}. } }
      { \textbf{#2.} }
    \space
  }

\NewDocumentCommand \SubProofOf {som}
  {
    \tl_set:Nn \l_tmpa_tl
    {
      Proof~of~
      \IfValueTF {#2} { \hyperref[#2]{#3} }{ \ref{#3} }
    }

    \IfBooleanTF {#1}
      { \SubProof*{ \tl_use:N \l_tmpa_tl } }
      { \SubProof{ \tl_use:N \l_tmpa_tl } }
  }

