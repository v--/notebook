\newcommand  \SubProof            [1] {\item\indent\par{\textbf{#1.}}~}

\newcommand  \SubProofOf          [1] {\SubProof{Proof of \ref{#1}}}
\newcommand  \SubProofEquivalence [2] {\SubProof{Proof that \ref{#1} and \ref{#2} are equivalent}}
\newcommand  \SubProofImplication [2] {\SubProof{Proof that \ref{#1} implies \ref{#2}}}

\newcommand  \Sufficiency             {\SubProof{Proof of sufficiency}}
\newcommand  \SufficiencyOf       [1] {\SubProof{Proof of sufficiency of \ref{#1}}}

\newcommand  \Necessity               {\SubProof{Proof of necessity}}
\newcommand  \NecessityOf         [1] {\SubProof{Proof of necessity of \ref{#1}}}
