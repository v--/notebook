      and~
      \IfValueTF {#4} { \hyperref[#4]{#5} } { \ref{#5} }
    }

    \IfBooleanTF {#1}
      { \SubProof*{ \tl_use:N \l_tmpa_tl } }
      { \SubProof{ \tl_use:N \l_tmpa_tl } }
  }

