\NewDocumentCommand  \SubProof            {m}  {\item\indent\par{\textbf{#1.}}~}

\NewDocumentCommand  \SubProofOf          {m}  {\SubProof{Proof of \fullref{#1}}}
\NewDocumentCommand  \SubProofEquivalence {mm} {\SubProof{Proof that \ref{#1} and \ref{#2} are equivalent}}
\NewDocumentCommand  \SubProofImplication {mm} {\SubProof{Proof that \ref{#1} implies \ref{#2}}}

\NewDocumentCommand  \Sufficiency         {}   {\SubProof{Proof of sufficiency}}
\NewDocumentCommand  \SufficiencyOf       {m}  {\SubProof{Proof of sufficiency of \ref{#1}}}

\NewDocumentCommand  \Necessity           {}   {\SubProof{Proof of necessity}}
\NewDocumentCommand  \NecessityOf         {m}  {\SubProof{Proof of necessity of \ref{#1}}}
